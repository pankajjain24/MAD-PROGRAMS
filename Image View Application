activity_main.xml

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <ImageView android:id="@+id/imageView1" android:layout_width="fill_parent" android:layout_height="250dp"/>
       <ImageView android:id="@+id/imageView2" android:layout_width="fill_parent" android:layout_height="250dp"/>
   </LinearLayout>

MainActivity.java

   package com.asha.imageview;

